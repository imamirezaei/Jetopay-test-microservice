# Application
NODE_ENV=development
PORT=3006

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=jetopay_hub_shaparak
DB_SYNC=true
DB_SSL=false
DB_LOGGING=true

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Transaction Settings
TRANSACTION_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3
HIGH_VALUE_TRANSACTION_THRESHOLD=500000000
MAX_TRANSACTION_AMOUNT=10000000000
REPORTING_THRESHOLD=100000000

# CBI (Central Bank of Iran) Settings
CBI_API_URL=https://api.cbi.ir
CBI_API_KEY=your-cbi-api-key

# Shaparak Settings
SHAPARAK_API_URL=https://api.shaparak.ir
SHAPARAK_MERCHANT_ID=your-shaparak-merchant-id
SHAPARAK_TERMINAL_ID=your-shaparak-terminal-id

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug